<% provide(:title, ' - ' + @user.username + '\'s gallery') %>
<h1>
  skuvo<span><%= link_to image_tag('/assets/glyphicons_upload.png'), root_path %></span>
</h1>
<h2>
  <%= @user.username %>'s Gallery 
  (<span id="photosCount"><%= @photos.count %></span>)
</h2>

<div class="gallery">
  <div class="innerContainer">
    <% if @photos.any? %>
      <% @photos.each do |photo| %>
      <div class="photoView">
        <a href="<%= photo.url %>">
          <img alt="<%= @user.username %>'s image" class="photo" height="200" src="<%= photo.url %>/convert?fit=crop&amp;height=200&amp;width=200" width="200" />
        </a>
        <div>
      	 <span><input style="string" value="http://skuvo.com/<%= photo.short_url %>" size="30" readonly="readonly" onclick="this.select()"></span>
    	  </div>
    	  <div class="photoButtons">
          <%= custom_tweet_button(image_tag('/assets/glyphicons_twitter.png'), {url: "http://www.skuvo.com/" + photo.short_url, text: "Check out this skuvo-uploaded image:"}, {id: 'tweet'}) %>
          <button data-fp-apikey="AWbWJDU7S82YMEcTRnbFwz" 
            data-fp-mimetype="image/png" 
            data-fp-url="<%= photo.url %>" 
            name="button" 
            type="submit">
            <img alt="Glyphicons_200_download" id="download" src="/assets/glyphicons_download.png" />
          </button>
        <% if current_user == @user %>
        <span class="deleteButton">
          <%= link_to image_tag('/assets/glyphicons_remove.png', id: "delete", alt: "Delete Image"), photo, method: "delete", remote: true %>  
        </span>          
        <% end %>
    	  </div>
      </div>
      <% end %>
    <% else %>
      No uploaded images yet.
    <% end %>
  </div>
</div>