<div class="photoShow">
  <h1>
  <%= link_to "skuvo", root_path %><span id="uploader"><%= link_to image_tag('/assets/glyphicons_upload.png'), root_path %></span>
</h1>
  <p class="flash"><%= flash[:notice] %></p>
  <a href="<%= @photo.url %>">
    <img alt="skuvo uploaded image" class="photo" height="300" src="<%= @photo.url %>/convert?fit=crop&amp;height=300&amp;width=400" width="400" />
  </a>
  <div>
    <input style="string" value="http://skuvo.com/<%= @photo.short_url %>" size="30" readonly="readonly" onclick="this.select()">
  </div>
  <div class="photoButtons">
      <%= custom_tweet_button(image_tag('/assets/glyphicons_twitter.png'), {url: "http://www.skuvo.com/i/" + @photo.short_url, text: "Check out this skuvo-uploaded image:"}, {id: 'tweet'}) %>
    <button data-fp-apikey="AWbWJDU7S82YMEcTRnbFwz" 
      data-fp-mimetype="image/png" 
      data-fp-url="<%= @photo.url %>" 
      name="button" 
      type="submit">
      <img alt="Download image" id="download" src="/assets/glyphicons_download.png" />
    </button>
  </div>
<% if !current_user %>
  <p><%= link_to "Signup to save your images", signup_path %></p>
<% else %>
  <%= link_to "Return to " + @user.username + "'s gallery", username_path(@user.username) %>
<% end %>
</div>